{
	"compilerOptions": {
		"declaration": false,	
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"inlineSources": true,
		"lib": [
			"es2015",
			"dom"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"noStrictGenericChecks": true,
		"outDir": "build",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es5",
		"typeRoots": ["./node_modules/@types/"],
		"types": [
			"jasmine",
			 "node"
		]
	},
	"include": ["./src/**/*.ts"]
}
